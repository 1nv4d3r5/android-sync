        <activity
            android:theme="@style/FxAccountTheme"
            android:icon="@drawable/icon"
            android:label="@string/fxaccount_account_label"
            android:clearTaskOnLaunch="true"
            android:name="org.mozilla.gecko.fxaccount.activities.FxAccountSetupActivity"
            android:windowSoftInputMode="adjustResize">
            <!-- Adding a launcher will make this activity appear on the
                 Apps screen, which we only want when testing. -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:theme="@style/FxAccountTheme"
            android:name="org.mozilla.gecko.fxaccount.activities.FxAccountSetupNewAccountActivity"
            android:windowSoftInputMode="adjustResize"/>

        <activity
            android:theme="@style/FxAccountTheme"
            android:name="org.mozilla.gecko.fxaccount.activities.FxAccountSetupExistingAccountActivity"
            android:windowSoftInputMode="adjustResize"/>
