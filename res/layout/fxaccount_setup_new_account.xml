<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/FxAccountContainer" >

	<LinearLayout style="@style/FxAccountMiddle" >

		<TextView
			style="@style/FxAccountTop"
			android:layout_marginBottom="20dp"
			android:text="Create new account" />

		<FrameLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="20dp" >

			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:orientation="vertical" >

				<EditText
					android:id="@+id/email"
					style="@style/FxAccountEditItem"
					android:layout_marginBottom="10dp"
					android:ems="10"
					android:hint="Email address"
					android:inputType="textEmailAddress" >

					<requestFocus />
				</EditText>

				<EditText
					android:id="@+id/password"
					style="@style/FxAccountEditItem"
					android:layout_marginBottom="10dp"
					android:ems="10"
					android:hint="Password"
					android:inputType="textPassword" />

				<EditText
					android:id="@+id/password2"
					style="@style/FxAccountEditItem"
					android:ems="10"
					android:hint="Retype password"
					android:inputType="textPassword" />
			</LinearLayout>

			<FrameLayout
				android:id="@+id/disabledLayer"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:background="@drawable/fxaccount_disabled_layout_background"
				android:visibility="invisible" >
			</FrameLayout>
		</FrameLayout>

		<FrameLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="20dp" >

			<Button
				android:id="@+id/next"
				style="@style/FxAccountButton"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:onClick="onNext"
				android:text="Next"
				android:visibility="visible" />

			<ProgressBar
				android:id="@+id/progress"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:background="@drawable/fxaccount_button_background"
				android:visibility="invisible" />

			<TextView
				android:id="@+id/error"
				style="@style/FxAccountErrorTextItem"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:visibility="invisible" />
		</FrameLayout>

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical" >

			<TextView
				style="@style/FxAccountTextItem"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal"
				android:text="We use Mozilla&apos;s safe and secure Persona ID to create your account." />

			<TextView
				style="@style/FxAccountLinkItem"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal"
				android:text="Learn more." />
		</LinearLayout>
	</LinearLayout>

</ScrollView>